<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         bootstrap="./bootstrap.php"
         backupStaticAttributes="false"
         strict="true"
         colors="true"
         verbose="true">
  <testsuite name="LSE Test Suite">
    <directory>./</directory>
  </testsuite>
  <logging>
    <log type="coverage-html" target="../../workspace/build/coverage" title="example-php-repository"
         charset="UTF-8" yui="true" highlight="true"
         lowUpperBound="35" highLowerBound="70"/>
    <log type="coverage-clover" target="../../workspace/build/logs/clover.xml"/>
    <log type="junit" target="../../workspace/build/logs/junit.xml" logIncompleteSkipped="false"/>
  </logging>

<!--
  <filter>
    <whitelist addUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">src/system/application/</directory>
    </whitelist>
  </filter>
-->
</phpunit>
